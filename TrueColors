    <script>
        // 颜色描述数据[1](@ref)
        const colorDescriptions = {
            gold: {
                title: "金色性格 - 务实有责任心的计划者",
                description: "您重视责任、规划、稳定和可靠性。是组织的基石，做事有条理，注重细节，值得信赖。金色人格喜欢按部就班，这种人格最好帮他安排一些课外的课表，教练和学员之间的信赖程度会有所提高。在整个训练课程的最一开始，可以先告诉他们等等会做些什么、先后顺序是什么。[1](@ref)"
            },
            orange: {
                title: "橙色性格 - 充满活力的行动者", 
                description: "您热爱自由、行动、冒险和体验。充满活力与即兴发挥，喜欢挑战和新鲜事物。橙色人格特质的学员，就…随他们发挥吧，让他们累到筋疲力尽就是一次完美的训练。橙色人格特质的学员喜欢主动、自由、胜利、大胆、浮躁、承擔風險。[1](@ref)"
            },
            green: {
                title: "绿色性格 - 逻辑严谨的思想家",
                description: "您追求知识、逻辑、真理和智慧。是冷静的分析家与思想家，善于解决复杂问题。绿色人格会喜欢追根究底，理论背景越扎实、表达越有逻辑，或许可以和他相处非常融洽。他们独立探索才能理论，喜欢问'为什么'类的问题，做事巧妙。[1](@ref)"
            },
            blue: {
                title: "蓝色性格 - 安静平和的分析者",
                description: "您关注真诚、关系、成长和深层次沟通。是理想主义的助人者，富有同情心和理解力。蓝色人格特质的人，在带训练时就避免惊动他们，不需要刻意要炒热气氛。他们在训练的当下或许心里正在思考些什么，例如，哪条肌肉在出力。给他们一点空间，让他们自行体会就好。[1](@ref)"
            }
        };
        
        // 更新进度条
        function updateProgressBar() {
            const totalQuestions = 11;
            let answeredCount = 0;
            
            for (let i = 1; i <= totalQuestions; i++) {
                const questionAnswered = document.querySelector(`input[name="q${i}"]:checked`);
                if (questionAnswered) {
                    answeredCount++;
                }
            }
            
            const progressPercent = (answeredCount / totalQuestions) * 100;
            document.getElementById('progress').style.width = `${progressPercent}%`;
        }
        
        // 为所有选项添加事件监听器以更新进度条
        document.addEventListener('DOMContentLoaded', function() {
            const allRadios = document.querySelectorAll('input[type="radio"]');
            allRadios.forEach(radio => {
                radio.addEventListener('change', updateProgressBar);
            });
        });
        
        function calculateResult() {
            // 检查是否所有题目都已回答
            const allAnswered = checkAllQuestionsAnswered();
            if (!allAnswered) {
                alert("请先完成所有题目！");
                return;
            }
            
            // 初始化分数
            let scores = { gold: 0, orange: 0, green: 0, blue: 0 };
            
            // 计算每道题的分数[1](@ref)
            for (let i = 1; i <= 11; i++) {
                const selected = document.querySelector(`input[name="q${i}"]:checked`);
                if (selected) {
                    scores[selected.value]++;
                }
            }
            
            // 找出最高分
            let maxScore = 0;
            let mainColor = '';
            
            for (const color in scores) {
                if (scores[color] > maxScore) {
                    maxScore = scores[color];
                    mainColor = color;
                }
            }
            
            // 显示结果
            displayResult(scores, mainColor);
        }
        
        function checkAllQuestionsAnswered() {
            for (let i = 1; i <= 11; i++) {
                const questionAnswered = document.querySelector(`input[name="q${i}"]:checked`);
                if (!questionAnswered) {
                    // 滚动到未回答的问题
                    document.querySelector(`input[name="q${i}"]`).closest('.question').scrollIntoView({ 
                        behavior: 'smooth',
                        block: 'center'
                    });
                    return false;
                }
            }
            return true;
        }
        
        function displayResult(scores, mainColor) {
            // 更新分数显示
            document.getElementById('goldScore').textContent = scores.gold;
            document.getElementById('orangeScore').textContent = scores.orange;
            document.getElementById('greenScore').textContent = scores.green;
            document.getElementById('blueScore').textContent = scores.blue;
            
            // 设置主颜色显示
            const mainColorElement = document.getElementById('mainColor');
            mainColorElement.textContent = colorDescriptions[mainColor].title;
            mainColorElement.className = `color-result ${mainColor}`;
            
            // 设置颜色描述
            document.getElementById('colorDescription').innerHTML = `
                <h3>${colorDescriptions[mainColor].title}特点：</h3>
                <p>${colorDescriptions[mainColor].description}</p>
                <p><strong>True Colors</strong> 是一种模型，用于根据您的个性气质理解自己和他人。橙色、金色、绿色和蓝色用于区分四种核心的True Colors个性风格。我们每个人都拥有四种True Colors的组合，构成我们的人格谱系，通常其中一种风格占主导地位。[1,5](@ref)</p>
            `;
            
            // 显示结果区域
            document.getElementById('resultSection').style.display = 'block';
            
            // 滚动到结果区域
            document.getElementById('resultSection').scrollIntoView({ behavior: 'smooth' });
        }
        
        function shareTest() {
            const testLink = window.location.href;
            
            // 使用现代剪贴板API[6,7](@ref)
            if (navigator.clipboard && navigator.clipboard.writeText) {
                navigator.clipboard.writeText(testLink).then(() => {
                    alert("测试链接已复制到剪贴板，可以分享给朋友了！");
                }).catch(err => {
                    // 如果剪贴板API失败，使用备用方法
                    fallbackCopyToClipboard(testLink);
                });
            } else {
                // 备用方法
                fallbackCopyToClipboard(testLink);
            }
        }
        
        function fallbackCopyToClipboard(text) {
            const textArea = document.createElement("textarea");
            textArea.value = text;
            textArea.style.position = "fixed";
            textArea.style.opacity = "0";
            document.body.appendChild(textArea);
            textArea.focus();
            textArea.select();
            
            try {
                document.execCommand('copy');
                alert("测试链接已复制到剪贴板，可以分享给朋友了！");
            } catch (err) {
                alert("复制失败，请手动复制链接: " + text);
            }
            
            document.body.removeChild(textArea);
        }
    </script>
</body>
